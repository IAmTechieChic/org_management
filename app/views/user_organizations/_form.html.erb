<%= form_for(@user_organization) do |f| %>
  <% if @user_organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_organization.errors.count, "error") %> prohibited this user_organization from being saved:</h2>

      <ul>
      <% @user_organization.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user %><br>
    <%= f.select :user_id, @users.map{|user| [user.email, user.id]}, :selected => @user_organization.user.id %>
  </div>
  <div class="field">
    Check the organizations you would want to give the user access to:<br>
    <% @organizations.each do |org|%>
    	<%= org.name %>
    	<%= check_box_tag "org_id"+"#{org.id}", "#{org.id}"%><br>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
